#!/bin/bash
this=$0
while true; do
  linkbin=`readlink $this`
  if [[ -z "$linkbin" ]]; then
    break
  elif [[ "$this" == "$linkbin" ]]; then
    break
  else
    this=$linkbin
  fi
done

bindir=`dirname $this`

# read STDIN sent to post-receive
read COMMIT_FROM COMMIT_TO COMMIT_REF

for script in $bindir/post-receive.d/*; do
  if [[ -x $script ]]; then
    # echo $script $*
    echo $COMMIT_FROM $COMMIT_TO $COMMIT_REF | $script $*
  fi
done
